@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create New Category
            </a>
         </div>
    </div>
    <br/><br/><br />

</div>
<table class="table table-borderd table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
             
            
            <th>
                Display order
            </th>
            <th>
                Age
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
       <tr>
            <td width="70%">
                @obj.Name
            </td>
            <td width="70%">
                @obj.DisplayOrder
            </td>
             <td width="60%">
                @obj.Age
            </td>

            <td>
                <div class ="w-75 btn-group" role="group"></div>
                <a asp-action="Edit" asp-controller="Category"asp-route-id="@obj.Id"
                class="btn btn-primary mx-2"><i class="bi bi-pen"></i>Edit</a>
            </td>

        </tr>
        }
    </tbody>

    </table>
    
    </div>